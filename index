<section id="contact" style="background:var(--bg-card-alt);">
    <div class="container max-w-xl" style="max-width:36rem;">
        <h2 class="text-center mb-8 fade-up">Contact</h2>
        <form class="contact-form fade-up" id="contactForm" autocomplete="off">
            <input type="text" name="name" required placeholder="Your Name" autocomplete="off" />
            <input type="email" name="email" required placeholder="Your Email" autocomplete="off" />
            <textarea name="message" required placeholder="Your Message" rows="4" autocomplete="off"></textarea>
            <button type="submit" class="cta-btn">Send Message</button>
            <div class="contact-confirm" id="contactConfirm">Thank you! Your message has been sent.</div>
        </form>
        <div class="socials">
            <a href="https://github.com/ebor62" target="_blank" rel="noopener" aria-label="GitHub">
                <svg width="32" height="32" fill="none" viewBox="0 0 32 32"><rect width="32" height="32" rx="6" fill="#1E293B"/><path d="M16 8a8 8 0 00-2.5 15.6c.4.1.5-.2.5-.4v-1.4c-2 .4-2.5-.5-2.7-1-.1-.3-.5-1-.8-1.2-.3-.2-.7-.7 0-.7.6 0 1 .6 1.1.8.7 1.1 1.8.8 2.2.6.1-.5.3-.8.5-1-1.8-.2-3.7-.9-3.7-4a3.1 3.1 0 01.8-2.2c-.1-.2-.4-1 .1-2.1 0 0 .7-.2 2.2.8a7.5 7.5 0 014 0c1.5-1 2.2-.8 2.2-.8.5 1.1.2 1.9.1 2.1.5.6.8 1.3.8 2.2 0 3.1-1.9 3.8-3.7 4 .3.3.6.7.6 1.4v2c0 .2.1.5.5.4A8 8 0 0016 8z" fill="#F3F4F6"/></svg>
            </a>
            <a href="https://linkedin.com/in/nathan-ferhart" target="_blank" rel="noopener" aria-label="LinkedIn">
                <svg width="32" height="32" fill="none" viewBox="0 0 32 32"><rect width="32" height="32" rx="6" fill="#1E293B"/><path d="M10 12h4v2h.1c.6-1.1 2-2.2 4.1-2.2 4.4 0 5.2 2.9 5.2 6.6V24h-4v-5.2c0-1.2 0-2.8-1.7-2.8s-2 1.3-2 2.7V24h-4v-12zm-2 0h4v12h-4V12zm2-6a2 2 0 110 4 2 2 0 010-4z" fill="#60A5FA"/></svg>
            </a>
        </div>
    </div>
