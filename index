<script>
    // Fade-up on scroll
    function fadeInOnScroll() {
        var els = document.querySelectorAll('.fade-up');
        var winH = window.innerHeight;
        els.forEach(function(el, i) {
            var rect = el.getBoundingClientRect();
            if (rect.top < winH - 80) {
                el.classList.add('visible');
            }
        });
    }
    window.addEventListener('scroll', fadeInOnScroll);
    window.addEventListener('resize', fadeInOnScroll);

    // Carousel Data
    var carouselProjects = [
        {
            img: "https://placehold.co/320x160/1e293b/60a5fa?text=Shop+Class",
            alt: "Shop Class File Organizer",
            title: "Shop Class File Organizer",
            desc: "Local Dropbox-style file system for high school woodshop. Dockerized, fast to deploy offline. Clean frontend with backend integration.",
            tags: [
                { text: "React", class: "react" },
                { text: "Docker", class: "docker" },
                { text: "Node.js", class: "node" }
            ],
            badge: { text: "Deployed", color: "#4ade80" },
            link: null
        },
        {
            img: "https://placehold.co/320x160/1e293b/60a5fa?text=Hack+Centauri",
            alt: "Hack Centauri",
            title: "Hack Centauri",
            desc: "Galactic-themed hackathon site with animated transitions and custom theming.",
            tags: [
                { text: "React", class: "react" },
                { text: "Framer Motion", class: "framer-motion" },
                { text: "Theming", class: "theming" }
            ],
            badge: null,
            link: { url: "https://ebor62.github.io/HackCentauri/", text: "Live Site" }
        },
        {
            img: "https://placehold.co/320x160/1e293b/60a5fa?text=Submersion",
            alt: "Submersion",
            title: "Submersion",
            desc: "Underwater-themed interactive event site. Reversible animations, glowing pulse, parallax.",
            tags: [
                { text: "React", class: "react" },
                { text: "Framer Motion", class: "framer-motion" },
                { text: "Parallax", class: "parallax" }
            ],
            badge: null,
            link: { url: "https://submersion.pages.dev/", text: "Live Site" }
        },
        {
            img: "https://placehold.co/320x160/1e293b/60a5fa?text=Synth+Rack",
            alt: "Custom Synth Rack",
            title: "Custom Synth Rack",
            desc: "Foam-prototyped, CNC-cut wood rack for small bedrooms. Built using design/fabrication skills from internship.",
            tags: [
                { text: "Design", class: "design" },
                { text: "Fabrication", class: "fabrication" },
                { text: "CNC", class: "cnc" }
            ],
            badge: { text: "Prototype", color: "var(--steel)" },
            link: null
        }
    ];

    var carouselIndex = 0;
    var carouselAnimating = false;
    var carouselTimeout = null;
    var lastDirection = 0;

    // Intuitive carousel animation logic
    function renderCarousel(current, direction) {
        var cards = document.getElementById('carouselCards');
        if (!cards) return;
        cards.innerHTML = '';
        var n = carouselProjects.length;
        var prev = (current - 1 + n) % n;
        var next = (current + 1) % n;

        // Track previous index for animation
        var prevIndex = renderCarousel._prevIndex !== undefined ? renderCarousel._prevIndex : current;
        var prevDir = direction || 0;

        for (var i = 0; i < n; i++) {
            var p = carouselProjects[i];
            var card = document.createElement('div');
            card.className = 'carousel-card';
            card.setAttribute('tabindex', i === current ? '0' : '-1');
            card.setAttribute('aria-label', p.title + (i === current ? ' (current project)' : ''));
            card.innerHTML = `
                <div style="width:100%;height:10rem;background:var(--graphite);border-radius:0.75rem;margin-bottom:1rem;display:flex;align-items:center;justify-content:center;overflow:hidden;">
                    <img src="${p.img}" alt="${p.alt}" class="object-cover" style="width:100%;height:100%;" draggable="false" />
                </div>
                <h3 class="mb-2">${p.title}</h3>
                <p class="text-sm mb-3" style="color:var(--steel);">${p.desc}</p>
                <div style="margin-bottom:0.5rem;">
                    ${p.tags.map(t => `<span class="tag ${t.class}">${t.text}</span>`).join('')}
                </div>
                ${p.link ? `<a href="${p.link.url}" target="_blank" rel="noopener" class="text-xs text-blue font-medium hover:underline" style="color:var(--blue);font-weight:600;text-decoration:none;">${p.link.text}</a>` : ''}
                ${p.badge ? `<span class="text-xs" style="color:${p.badge.color};font-weight:600;">${p.badge.text}</span>` : ''}
            `;

            // Assign position classes for animation
            if (i === current) {
                card.classList.add('active');
                card.style.transform = 'translate(-50%, -50%) scale(1)';
                card.style.left = '50%';
                card.style.zIndex = 10;
            } else if (i === prev) {
                card.classList.add('prev');
                card.style.transform = 'translate(-120%, -50%) scale(0.9)';
                card.style.left = '50%';
                card.style.zIndex = 2;
            } else if (i === next) {
                card.classList.add('next');
                card.style.transform = 'translate(20%, -50%) scale(0.9)';
                card.style.left = '50%';
                card.style.zIndex = 2;
            } else {
                card.classList.add('far');
                card.style.opacity = 0;
                card.style.pointerEvents = 'none';
                card.style.zIndex = 0;
            }

            // Only allow click for prev/next
            if (i === prev) {
                card.addEventListener('click', function() { moveCarousel(-1); });
                card.style.cursor = 'pointer';
            } else if (i === next) {
                card.addEventListener('click', function() { moveCarousel(1); });
                card.style.cursor = 'pointer';
            } else {
                card.style.cursor = i === current ? 'default' : 'auto';
            }

            // Animation classes for intuitive sliding
            if (direction !== 0) {
                if (i === current) {
                    if (direction === 1) {
                        card.classList.add('slide-left-in');
                    } else if (direction === -1) {
                        card.classList.add('slide-right-in');
                    }
                }
                if (i === prevIndex) {
                    if (direction === 1) {
                        card.classList.add('slide-left-out');
                    } else if (direction === -1) {
                        card.classList.add('slide-right-out');
                    }
                }
            }

            cards.appendChild(card);
        }
        renderCarousel._prevIndex = current;
    }

    function moveCarousel(dir) {
        if (carouselAnimating) return;
        carouselAnimating = true;
        var n = carouselProjects.length;
        var prevIndex = carouselIndex;
        carouselIndex = (carouselIndex + dir + n) % n;
        lastDirection = dir;
        renderCarousel(carouselIndex, dir);
        clearTimeout(carouselTimeout);
        carouselTimeout = setTimeout(function() {
            carouselAnimating = false;
            // After animation, render static state (no animation classes)
            renderCarousel(carouselIndex, 0);
        }, 400);
    }

    window.addEventListener('DOMContentLoaded', function() {
        fadeInOnScroll();

        // Contact form confirmation
        var form = document.getElementById('contactForm');
        var confirm = document.getElementById('contactConfirm');
        if (form && confirm) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                confirm.classList.add('visible');
                setTimeout(function() {
                    confirm.classList.remove('visible');
                }, 2200);
                form.reset();
            });
        }
        // Keyboard focus for tiles/cards
        document.querySelectorAll('.tile, .card').forEach(function(el) {
            el.addEventListener('focus', function() { el.classList.add('focus-outline'); });
            el.addEventListener('blur', function() { el.classList.remove('focus-outline'); });
        });

        // Carousel logic
        renderCarousel(carouselIndex, 0);

        var leftBtn = document.getElementById('carouselLeftBtn');
        var rightBtn = document.getElementById('carouselRightBtn');
        var cards = document.getElementById('carouselCards');

        leftBtn.addEventListener('click', function() { moveCarousel(-1); });
        rightBtn.addEventListener('click', function() { moveCarousel(1); });

        // Keyboard navigation for carousel
        cards.addEventListener('keydown', function(e) {
            if (carouselAnimating) return;
            if (e.key === 'ArrowLeft') {
                moveCarousel(-1);
            } else if (e.key === 'ArrowRight') {
                moveCarousel(1);
            }
        });

        // Allow focus on center card for accessibility
        cards.addEventListener('focus', function() {
            var center = cards.querySelector('.carousel-card.active');
            if (center) center.focus();
        });

        // Optional: swipe support for mobile
        var startX = null;
        cards.addEventListener('touchstart', function(e) {
            if (e.touches.length === 1) startX = e.touches[0].clientX;
        });
        cards.addEventListener('touchend', function(e) {
            if (startX === null) return;
            var endX = e.changedTouches[0].clientX;
            var dx = endX - startX;
            if (Math.abs(dx) > 40) {
                if (dx < 0) moveCarousel(1);
                else moveCarousel(-1);
            }
            startX = null;
        });
    });
</script>
</body>
</html>
